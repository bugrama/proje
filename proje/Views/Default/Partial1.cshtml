@using proje.Models.Siniflar
@model List<Turlar>

<div class="con-bot">
    @foreach(var x in Model) 
    {
    <div class="left">
        <div class="bot-left">
            <img src="@x.Resim" style="width:300px;height:150px;" alt="" />
        </div>
        <div class="left-text">
            <h4>@x.Baslik</h4>
           
            <p>@x.Aciklama.Substring(0,100)</p>
            <p><a href="/Turlar/TurDetay/@x.Id"><span class="read">Read More >></span></a></p>
        </div>
    </div>
    }
    @Html.Action("Partial2", "Default");
    
    <div class="clear"></div>
</div>
