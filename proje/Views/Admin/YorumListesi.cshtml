@using proje.Models.Siniflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
}

<h2>Yorum Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog-Adi</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach(var x in Model)
            {
                <tr>
                    <td>@x.Id</td>
                    <td>@x.Rumuz</td>
                    <td>@x.mail</td>
                    <td>@x.yorum</td>
                    <td>@x.Tur.Baslik</td>
                    <td><a href="/Admin/YorumGetir/@x.Id" class="btn btn-warning">Güncelle</a></td>
                    <td><a href="/Admin/YorumSil/@x.Id" class="btn btn-danger">Sil</a></td>
                    
                </tr>
            }
</table>
